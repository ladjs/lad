{
  "apps": [
    {
      "name": "bree",
      "script": "bree.js",
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": ["104.248.4.5"],
      "ref": "origin/master",
      "repo": "<%= repo %>",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy": "npm install && NODE_ENV=production npm start build && pm2 startOrGracefulReload ecosystem-bree.json --env production --update-env"
    }
  }
}
