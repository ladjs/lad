{
  "apps": [
    {
      "name": "web",
      "script": "web.js",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "proxy",
      "script": "proxy.js",
      "exec_mode": "cluster",
      "wait_ready": true,
      "instances": "max",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "api",
      "script": "api.js",
      "exec_mode": "fork",
      "wait_ready": true,
      "instances": "1",
      "env_production": {
        "NODE_ENV": "production",
        "API_PORT": "4000"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "deploy",
      "host": ["167.71.85.68"],
      "ref": "origin/master",
      "repo": "<%= repo %>",
      "path": "/var/www/production",
      "pre-deploy": "git reset --hard",
      "post-deploy": "npm install && NODE_ENV=production npm start build && pm2 startOrGracefulReload ecosystem-web.json --env production --update-env"
    }
  }
}
