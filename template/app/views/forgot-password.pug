
extends layout

block body
  .container.py-3
    .row
      .col-xs-12.col-sm-12.col-md-6.offset-md-3.col-lg-6.offset-lg-3
        .card
          .card-body
            h1.card-title.h4= t('Forgot Password')
            p= t('If you need to reset your password, then enter your email below.')
            form.ajax-form(action=`/${locale}/forgot-password`, method="POST", autocomplete="off")
              input(type="hidden", name="_csrf", value=ctx.csrf)
              .form-group
                input#input-email.form-control(type="email", autocomplete="off", name="email", placeholder=t('Email address'))
              button.btn.btn-primary.btn-block(type="submit")
                i.fa.fa-envelope
                = ' '
                = t('Send Password Reset Link')
          .card-footer.text-center
            = t('Remember your password?')
            = ' '
            a.card-link(href="/login")= t('Log in now')
