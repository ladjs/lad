
extends layout

block body
  .container.py-3
    .row
      .col-xs-12.col-sm-12.col-md-6.offset-md-3.col-lg-6.offset-lg-3
        .card
          .card-block
            h1.card-title.h4= t('Reset Password')
            p= t('Please confirm your email and enter a new password.')
            form.ajax-form(action=ctx.path, method="POST", autocomplete="off")
              .form-group
                input#input-email.form-control(type="email", autocomplete="off", name="email", placeholder=t('Email address'))
              .form-group
                input#input-password.form-control(type="password", autocomplete="off", name="password", placeholder=t('Password'))
              button.btn.btn-primary.btn-block(type="submit")
                i.fa.fa-envelope
                = ' '
                = t('Set New Password')
          .card-footer.text-center
            = t('Having trouble?')
            a.card-link(href=`/${locale}/forgot-password`)= t('Start over now')
